<config>
  <app>
    <title>Platformer Kawaii by Juls&Hekbas  -  Game Development</title>
    <organization>UPC</organization>
  </app>

  <renderer>
    <vsync value="false"/>
  </renderer>

  <window>
    <resolution width="1472" height="832" scale="2" gamescale="3"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>
	
  <audio>
    <music volume="10"/>
    <fx volume="32"/>
  </audio>

  <logo>
	<pos x="0" y="0" texturepath="Assets/Textures/Scenes/logo.png" />
  </logo>

  <title>
  	<pos x="0" y="0" texturepath="Assets/Textures/Scenes/menu.png" textureAnim="Assets/Textures/Characters/NewPlayer/player.png" xA="590" yA="121" credits="Assets/Textures/Scenes/credits.png"/>
  </title>
	
  <scene>
    <player x="16" y="81" texturepath="Assets/Textures/Characters/NewPlayer/player.png" jump="Assets/Audio/Fx/jump.wav" death="Assets/Audio/Fx/death.wav" dash="Assets/Audio/Fx/dash.wav"/>
    <fly x="300" y="118" texturepath="Assets/Textures/Characters/NewEnemies/enemies.png" audioPath="Assets/Audio/Fx/attack.wav"/>
	<walk x="100" y="118" texturepath="Assets/Textures/Characters/NewEnemies/enemies.png" audioPath="Assets/Audio/Fx/attack.wav"/>
	<coin x="200" y="118" texturepath="Assets/Textures/Characters/Coins/coin4_16x16.png" audioPath="Assets/Audio/Fx/coin.wav"/>
	<health x="16" y="128" texturepath="Assets/Textures/Characters/Coins/health.png" audioPath="Assets/Audio/Fx/coin.wav"/>

	<interact audioPath="Assets/Audio/Fx/attack.wav"/>
	<ui coinCount="0" healthCount="3" coinPath="Assets/Textures/Characters/Coins/coin4_16x16.png" healthPath="Assets/Textures/Characters/Coins/health.png"/>
	<chickboy x="2186" y="385" texturepath="Assets/Textures/Characters/ChickBoy/AnimationList.png" score="0"/>
    <music audioPath="Assets/Audio/Music/platform.ogg"/>
	<fonts fontPath="Assets/Textures/Fonts/sprite_font_white.png"/>
	<camera speed="6" x="0" y="0"/>

	<frcap fps="60"/>
  </scene>

  <ending>
  	<pos x="0" y="0" texturepath="Assets/Textures/Scenes/end.png"/>
  </ending>
	
  <map>
    <mapfolder path="Assets/Maps/"/>
    <mapfile path="Assets/Maps/NEW_Level_1.tmx"/>
  </map>
  
</config>
