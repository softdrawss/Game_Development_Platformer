<config>
  <app>
    <title>Platformer Kawaii by Juls&Hekbas  -  Game Development</title>
    <organization>UPC</organization>
  </app>

  <renderer>
    <vsync value="true"/>
  </renderer>

  <window>
    <resolution width="1472" height="832" scale="2"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <audio>
    <music volume="16"/>
    <fx volume="32"/>
  </audio>

  <logo>
	<pos x="0" y="175" texturepath="Assets/Textures/logo.png"/>
  </logo>

  <title>
  	<pos x="0" y="175" texturepath="Assets/Textures/menu.png"/>
  </title>
	
  <scene>
    <player x="128" y="512" texturepath="Assets/Textures/MC/1 Pink_Monster/Pink_Monster_Animation_List_3.png"/>
    <fly x="352" y="423" texturepath="Assets/Textures/NOT_USED_ANIM/merchant/idle.png"/>
	<walk x="352" y="470" texturepath="Assets/Textures/NOT_USED_ANIM/merchant/idle.png"/>
    <music audioPath="Assets/Audio/Music/platform.ogg"/>
	<fonts fontPath="Assets/Textures/sprite_font_white.png"/>
	<camera speed="6" x="0" y="0"/>
  </scene>

  <ending>
  	<pos x="0" y="225" texturepath="Assets/Textures/end.png"/>
  </ending>
	
  <map>
    <mapfolder path="Assets/Maps/"/>
    <mapfile path="Assets/Maps/Level_1.tmx"/>
  </map>
  
</config>
