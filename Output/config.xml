<config>
  <app>
    <title>Platformer Kawaii by Juls&Hekbas  -  Game Development</title>
    <organization>UPC</organization>
  </app>

  <renderer>
    <vsync value="true"/>
  </renderer>

  <window>
    <resolution width="1472" height="832" scale="3"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <audio>
    <music volume="16"/>
    <fx volume="32"/>
  </audio>

  <logo>
	<pos x="0" y="0" texturepath="Assets/Textures/Scenes/logo.png"/>
  </logo>

  <title>
  	<pos x="0" y="0" texturepath="Assets/Textures/Scenes/menu.png"/>
  </title>
	
  <scene>
    <player x="16" y="81" texturepath="Assets/Textures/Characters/NewPlayer/player.png"/>
    <fly x="100" y="81" texturepath="Assets/Textures/Characters/NewEnemies/enemies.png"/>
	<walk x="40" y="81" texturepath="Assets/Textures/Characters/NewEnemies/enemies.png"/>
    
	<chickboy x="2186" y="385" texturepath="Assets/Textures/Characters/ChickBoy/AnimationList.png"/>
    <music audioPath="Assets/Audio/Music/platform.ogg"/>
	<fonts fontPath="Assets/Textures/Fonts/sprite_font_white.png"/>
	<camera speed="6" x="0" y="0"/>
  </scene>

  <ending>
  	<pos x="0" y="0" texturepath="Assets/Textures/Scenes/end.png"/>
  </ending>
	
  <map>
    <mapfolder path="Assets/Maps/"/>
    <mapfile path="Assets/Maps/NEW_Level_1.tmx"/>
  </map>
  
</config>
